<div class="container col-8 col-offset-5 mt-5 bg-white py-5 px-5">
  <div>
    <h2 class="text-center m-3 pb-3">Add your bike</h2>
    <%= simple_form_for(@bike) do |f| %>
      <%= f.input :name %>
      <%= f.input :details %>
      <%= f.input :address %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: "btn btn-success w-100" %>
    <% end %>
  </div>
</div>
