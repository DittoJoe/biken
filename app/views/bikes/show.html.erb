<div class="show-container">
  <div class="card-trip">
    <% if @bike.photo.attached? %>
    <%= cl_image_tag @bike.photo.key %>
    <% else %>
    <img src="https://quickbutik.imgix.net/4582H/products/5bbc97e2b880c.png" />
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2 class="bike"><%= @bike.name %></h2>
        <h3><%= @bike.details %></h3>
        <p><strong>Uploaded by <%= @bike.user.email %></strong></p>
      </div>
      <h2 class="card-trip-pricing">99.99 SEK</h2>
      <%= cl_image_tag '11276241_890671564313185_1851098347_n.jpg_fb3oxk', class: "card-trip-user avatar-bordered" %>
    </div>
  </div>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
<div class="container">
  <%= link_to 'Take me for a ride ðŸš²', new_bike_booking_path(@bike), class: "btn btn-primary mb-3" %>
</div>

