<div class="container mt-5">
  <div class="card-trip">
    <% if @bike.photo.attached? %>
    <%= cl_image_tag @bike.photo.key %>
    <% else %>
    <img src="https://quickbutik.imgix.net/4582H/products/5bbc97e2b880c.png" />
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2 class="bike"><%= @bike.name %></h2>
        <p> <%= @bike.details %> by <strong><%= @bike.user.email %></strong>.</p>
      </div>
      <h2 class="card-trip-pricing">99.99 SEK</h2>
      <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
    </div>
  </div>|
  <%= link_to 'Back', bikes_path %>
  <div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>




