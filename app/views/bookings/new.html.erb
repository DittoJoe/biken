<div class="container col-8 col-offset-5 mt-5 bg-white py-5 px-5">
  <div>
    <h2 id="form-title">Confirm your booking</h2>
    <%= simple_form_for [@bike, @booking] do |f| %>
      <h2>Your email:</h2>
      <p><%= @booking.user.email %></p>
      <h2>To rent:</h2>
      <p><%= @bike.name %></p>
      <%= cl_image_tag @bike.photo.key, id: "form-photo"  %>
      <%= f.submit class: "btn btn-success w-100" %>
    <% end %>
  </div>
</div>
